<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundSignin"
    tools:context=".ActivitySignup">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="100dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:id="@+id/gambarAkun"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="25dp"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:id="@+id/imgAkun"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_addphoto"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textimgAkun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/textNama"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:textSize="16dp"
                    android:textColor="@color/colorGray"
                    android:paddingLeft="60dp"
                    android:paddingBottom="5dp"
                    android:hint="Masukkan Nama"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/box_nama"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/textUsername"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:textSize="16dp"
                    android:textColor="@color/colorGray"
                    android:paddingLeft="60dp"
                    android:paddingBottom="5dp"
                    android:hint="Masukkan Username"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/box_username"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/textEmail"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:textSize="16dp"
                    android:textColor="@color/colorGray"
                    android:paddingLeft="60dp"
                    android:paddingBottom="5dp"
                    android:hint="Masukkan Email"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/box_email"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:textSize="16dp"
                    android:textColor="@color/colorGray"
                    android:paddingLeft="60dp"
                    android:paddingBottom="5dp"
                    android:hint="Masukkan Password"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/box_password"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textJenisKelamin"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:gravity="center_vertical"
                    android:textSize="16dp"
                    android:textColor="@color/colorGray"
                    android:paddingLeft="60dp"
                    android:paddingBottom="5dp"
                    android:hint="Masukkan Jenis Kelamin"
                    android:background="@drawable/box_gender"/>

                <Spinner
                    android:id="@+id/spinnerJenisKelamin"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@android:color/black"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textTanggal"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:gravity="center_vertical"
                    android:textSize="16dp"
                    android:textColor="@color/colorGray"
                    android:paddingLeft="60dp"
                    android:paddingBottom="5dp"
                    android:hint="Masukkan Tanggal Lahir"
                    android:background="@drawable/box_tgllahir"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/textAlamat"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:textSize="16dp"
                    android:textColor="@color/colorGray"
                    android:paddingLeft="60dp"
                    android:paddingBottom="5dp"
                    android:hint="Masukkan Alamat"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/box_alamat"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/textTelp"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:textSize="16dp"
                    android:textColor="@color/colorGray"
                    android:paddingLeft="60dp"
                    android:paddingBottom="5dp"
                    android:hint="Masukkan Nomor Telepon"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/box_telp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textLevel"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:gravity="center_vertical"
                    android:textSize="16dp"
                    android:textColor="@color/colorGray"
                    android:paddingLeft="60dp"
                    android:paddingBottom="5dp"
                    android:text="customer"
                    android:background="@drawable/box_level"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnSignup"
                android:layout_width="200dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/colorOrange"
                android:text="DAFTAR"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>