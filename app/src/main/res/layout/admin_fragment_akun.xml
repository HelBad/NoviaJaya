<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".akun.FragmentAkun">
    <androidx.appcompat.widget.Toolbar
        app:title="Akun"
        android:id="@+id/toolbarAkun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize">
    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="35dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:id="@+id/gambarAkun"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/toolbarAkun"
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/imgAkun"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_addphoto"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/usernameAkun"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_below="@id/toolbarAkun"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/gambarAkun"
        android:text="Username"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/emailAkun"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_below="@id/usernameAkun"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/gambarAkun"
        android:text="Email"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/lihatAkun"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_below="@id/emailAkun"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/gambarAkun"
        android:paddingTop="3dp"
        android:text="EDIT PROFIL  >"
        android:textColor="@color/colorPurple"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@android:color/white"
        android:id="@+id/akun1"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@id/lihatAkun"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_nama"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="66dp"
            android:text="Nama"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/namaAkun"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="66dp"
            android:layout_marginTop="33dp"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"
            android:textStyle="bold"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@android:color/white"
        android:id="@+id/akun2"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@id/akun1"
        android:layout_marginTop="1dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_gender"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="66dp"
            android:text="Jenis Kelamin"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/jeniskelaminAkun"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="66dp"
            android:layout_marginTop="33dp"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"
            android:textStyle="bold"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@android:color/white"
        android:id="@+id/akun3"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@id/akun2"
        android:layout_marginTop="1dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_kalender"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="66dp"
            android:text="Tanggal Lahir"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tanggalAkun"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="66dp"
            android:layout_marginTop="33dp"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"
            android:textStyle="bold"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@android:color/white"
        android:id="@+id/akun4"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@id/akun3"
        android:layout_marginTop="1dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_alamat"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="66dp"
            android:text="Alamat"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/alamatAkun"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="66dp"
            android:layout_marginTop="33dp"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"
            android:textStyle="bold"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@android:color/white"
        android:id="@+id/akun5"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@id/akun4"
        android:layout_marginTop="1dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_telp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="66dp"
            android:text="Nomor Telepon"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/telpAkun"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="66dp"
            android:layout_marginTop="33dp"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"
            android:textStyle="bold"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@android:color/white"
        android:id="@+id/akun6"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@id/akun5"
        android:layout_marginTop="1dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_level"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="66dp"
            android:text="Masuk Sebagai"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/levelAkun"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="66dp"
            android:layout_marginTop="33dp"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"
            android:textStyle="bold"/>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnSignout"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/akun6"
        android:layout_centerHorizontal="true"
        android:background="@color/colorOrange"
        android:text="KELUAR"
        android:textColor="@android:color/white"
        android:textStyle="bold" />
</RelativeLayout>